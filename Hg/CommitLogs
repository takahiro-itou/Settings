
[alias]

mkbtopic    = ci -e -m "ブランチを作成 -- Topic # 0000\n(1) 説明"
mkbrefact   = ci -e -m "ブランチを作成 -- Refactoring # 0000\n(1) 説明"
clmtopic    = ci -e -m 'ブランチ Topic # 0000 をマージ'
clmrefact   = ci -e -m 'ブランチ Refactoring # 0000 をマージ'
clbtopic    = ci -e -m 'ブランチ Topic # 0000 を閉鎖'
clbrefact   = ci -e -m 'ブランチ Refactoring # 0000 を閉鎖'

