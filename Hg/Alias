
[alias]
slog        = log --template '{rev}:{node|short} {desc|firstline}\n'
chg         = diff -c
chgtip      = diff -c tip
dr          = diff -r
gla         = glog
gll         = glog --limit
glv         = glog -v --limit
glva        = glog -v
glvr        = glog -v -r
gls         = glog --template 'changeset: {rev}:{node|short}  {branch}  {tags}\nsummary:{desc|firstline}\n\n'
he          = histedit

cia         = ci --amend

mbdevelop   = branch  Develop
brn         = branch
brs         = branches
brc         = branches -c

